<!--Main layout-->
<main class="pt-3">
    <div class="container">
        <!--Section: Post-->
        <section class="mt-1">
            <!-- Title -->
            <h1 class="mb-3"></h1>

            <!-- Post Content -->
            <div id="content">
                <h3><%- course.title %></h3>
            </div>
            <hr>

            <!-- Author -->
            <p class="text-muted small">
                <span> توسط <a href="#"><%- course.user.name %></a> - </span>
                <span>نوشته در  <%= convertTime(course.createAt).format('jYYYY/jMM/jDD') %></span>
            </p>
            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-md-8 mb-4">

                    <!--Featured Image-->
                    <div class="card mb-4 wow fadeIn">

                        <img src="<%= course.image['720'] %>" class="img-fluid" alt="">

                    </div>
                    <!--/.Featured Image-->

                    <div class="card mb-4 wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                        <!--Card content-->
                        <div class="card-body">
                            <p><%- course.body %></p>
                        </div>

                    </div>

                    <!--Card-->
                    <div class="card mb-4 wow fadeIn">
                        <!--Card content-->
                        <div class="card-body">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    <h5 class="card-header">ویدیو ها</h5>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered first">
                                                <tbody class="text-center">
                                                    <% course.episodes.forEach(episode => { %>
                                                    <tr>
                                                        <td><%- episode.number %></td>
                                                        <td><%- episode.title %></td>
                                                        <td><%- episode.time %></td>
                                                        <td>
                                                            <a href="<%- episode.download(auth.check, req.user) %>">دانلود</a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <%- include(viewPath('layouts/comment'), { data : course }) %>

           
                    
                </div>
                <!--Grid column-->
                <div class="col-md-4 mb-4">
                    <!--Card: Jumbotron-->
                    <div class="card blue-gradient mb-4 wow fadeIn">
                        <!-- Content -->
                        <div class="card-body">
                            <h4>
                                <strong>قیمت : <%- course.price %></strong>
                            </h4>
                            <% if(auth.check) { %> 
                                <% if(course.type == 'vip') { %>
                                    <% if(! req.user.isVip()) { %> 
                                        <p class="alert alert-danger mt-3">پنل کاربری خود را به اعضاء ویژه ارتقا دهید</p>
                                    <% } %> 
                                <% } else if(course.type == 'cash') { %>
                                    <% if(accessUser) { %> 
                                    <form action="/course/payment" method="POST">
                                        <input type="hidden" name="course" value="<%- course.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger">خریداری دوره</button>
                                    </form>
                                    <% } else { %>
                                        <p class="alert alert-success mt-3">شما این دوره را قبلا خریداری کرده اید</p>
                                    <% } %>
                                <% } %>   
                            <% } else { %>
                                <a href="/auth/login" class="btn btn-danger btn-lg mt-3" style="width: 100%">وارد حساب کاربری خود شوید</a>
                            <% } %>
                        </div>
                        <!-- Content -->
                    </div>
                    <!--Card: Jumbotron-->

                    <!--Card : Dynamic content wrapper-->
                    <div class="card mb-4 wow fadeIn">

                        <div class="card-header">ویژگی های دوره</div>
                        <!--Card content-->
                        <div class="card-body">
                            <label for="student" class="grey-text">مدرس : <%- course.user.name %></label><br>
                            <label for="student" class="grey-text">دانشجو : <%- course.viewCount + 1 %> نفر</label><br>
                            <% if(course.type == 'Vip') { %> 
                                <label for="student" class="grey-text">نوع دوره : اعضاء ویژه</label><br>
                            <% } else if(course.type == 'cash') { %>
                                <label for="student" class="grey-text">نوع دوره : نقدی</label><br>
                            <% } else { %> 
                                <label for="student" class="grey-text">نوع دوره : رایگان</label><br>
                            <% } %>
                            <label for="student" class="grey-text">سطح دوره : متوسط</label><br>
                            <label for="student" class="grey-text">زمان : <%- course.time %></label><br>
                            <label for="student" class="grey-text">تعداد درس : <%- course.episodes.length %></label><br>
                            <label for="student" class="grey-text">بازدید : <%- course.viewCount + 1 %></label><br>
                            <label for="student" class="grey-text">دیدگاه : <%- course.commentCount %></label>
                        </div>

                    </div>
                    <!--/.Card : Dynamic content wrapper-->

                    <!--Card-->
                    <div class="card mb-4 wow fadeIn">
                        <!-- Categories Widget -->
                        <div class="card">
                            <h5 class="card-header">دسته بندی ها</h5>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <ul class="list-unstyled mb-0">
                                            <% categories.forEach(category => { %> 
                                            <li>
                                                <a href="#"><%- category.name %></a>
                                                <ul>
                                                    <% category.childs.forEach(cate => { %> 
                                                    <li><%- cate.name %></li>
                                                    <% }) %>
                                                </ul>
                                            </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/.Card-->
                </div>
                <!--Grid column-->
            </div>
            <!--Grid row-->
        </section>
        <!--Section: Post-->
    </div>
</main>
<!--Main layout-->